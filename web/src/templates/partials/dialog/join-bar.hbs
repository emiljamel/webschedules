<div class="modal-document join-bar" role="document">
    <div class="modal-title">
        <div class="title-wrapper">
            <h2 id="join-bar">Join to Schedule</h2>
            <p>Enter the schedule code here, then press the submit button.</p>
        </div>
    </div>
    <div class="modal-content">
        <div class="modal-item">
            <label for="code">Schedule Code</label>
            <div class="modal">
                <input type="text" name="code" id="code" spellcheck="false" autocomplete="off">
            </div>
        </div>
    </div>
    <div class="modal-button">
        <div class="btn-cancel">
            <button type="button" name="cancel" class="cancel">Cancel</button>
        </div>
        <div class="btn-submit">
            <button type="submit" name="sumbit" class="submit">Submit</button>
        </div>
    </div>
</div>