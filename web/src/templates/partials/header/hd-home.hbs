<header class="hd-home">
    <div class="content-space">
        <div class="homepage-bar">
            <a href="" class="homepage">
                <img src="./images/web-schedules.png" alt="Web Schedules">
                <h2>Web Schedules</h2>
            </a>
        </div>
    </div>
    <div class="search-bar" role="search" aria-labelledby="search-bar">
        <div class="btn-close">
            <a class="favicon" role="button">
                <svg 
                    xmlns="http://www.w3.org/2000/svg" 
                    viewBox="0 0 24 24" 
                    fill="black" 
                    width="18px" 
                    height="18px">
                    <path d="M0 0h24v24H0z" fill="none"></path>
                    <path d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z"></path>
                </svg>
            </a>
        </div>
        <div class="search-wrapper">
            <form action="" method="get">
                <button type="submit" name="btn-search" class="btn-submit">
                    <svg 
                        xmlns="http://www.w3.org/2000/svg" 
                        viewBox="0 0 24 24" 
                        fill="black" 
                        width="18px" 
                        height="18px">
                        <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"/>
                        <path d="M0 0h24v24H0z" fill="none"/>
                    </svg>
                </button>
                <div class="search">
                    <input type="search" name="search" class="input-search" id="search" spellcheck="false" autocomplete="off" placeholder="Search">
                </div>
                <button type="reset" name="btn-reset" class="btn-reset">
                    <svg 
                        xmlns="http://www.w3.org/2000/svg" 
                        viewBox="0 0 24 24" 
                        fill="black" 
                        width="18px" 
                        height="18px">
                        <path d="M0 0h24v24H0z" fill="none"/>
                        <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/>
                    </svg>
                </button>
            </form>
        </div>
        <div class="btn-search">
            <a class="favicon" role="button" id="search-bar">
                <svg 
                    xmlns="http://www.w3.org/2000/svg" 
                    viewBox="0 0 24 24" 
                    fill="black" 
                    width="18px" 
                    height="18px">
                    <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"/>
                    <path d="M0 0h24v24H0z" fill="none"/>
                </svg>
            </a>
        </div>
    </div>
    <nav class="content-space" role="navigation">
        <div class="create-bar">
            <a class="favicon" role="button" id="create-bar">
                <svg 
                    xmlns="http://www.w3.org/2000/svg" 
                    viewBox="0 0 24 24" 
                    fill="black" 
                    width="18px" 
                    height="18px">
                    <path d="M0 0h24v24H0z" fill="none"/>
                    <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
                </svg>
            </a>
            <div class="dropdown" aria-labelledby="create-bar">{{> ../dropdown/create-bar }}</div>
        </div>
        <avatar-bar></avatar-bar>
    </nav>
</header>